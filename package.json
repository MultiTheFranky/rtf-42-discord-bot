{
  "name": "rtf-42nd-discord-bot",
  "version": "0.0.1",
  "description": "A Discord Bot for 42nd RTF Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/MultiTheFranky/rtf-42nd-discord-bot"
  },
  "author": "Francisco Álamo García",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "postinstall": "husky install",
    "precommit": "yarn lint && yarn prettier",
    "prepush": "yarn build",
    "dev": "env-cmd tsnd -r tsconfig-paths/register --respawn src/index.ts",
    "start": "env-cmd yarn lint && ts-node src/index.ts",
    "server": "env-cmd node dist/index.js",
    "build": "tsc && tsc-alias",
    "clean": "rimraf dist && rimraf log && rimraf db && rimraf node_modules && yarn",
    "lint": "eslint src --ext .ts,.tsx",
    "prettier": "prettier --write \"**/*.{ts,tsx}\"",
    "audit": "yarn-audit-fix",
    "generate:graphql:types": "graphql-codegen"
  },
  "dependencies": {
    "@graphql-tools/schema": "10.0.2",
    "ajv": "8.12.0",
    "apollo-datasource": "3.3.2",
    "apollo-server": "3.13.0",
    "apollo-server-plugin-base": "3.7.2",
    "apollo-server-types": "3.8.0",
    "cron": "3.1.6",
    "discord.js": "^14.14.1",
    "graphql": "16.8.1",
    "graphql-rate-limit-directive": "2.0.5",
    "graphql-scalars": "1.22.4",
    "mongodb": "6.3.0",
    "node-cache": "5.1.2",
    "prettier": "^2.8.5",
    "rate-limiter-flexible": "4.0.1",
    "simple-json-db": "^2.0.0",
    "typescript": "^5.3.2",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "16.2.1",
    "@graphql-codegen/cli": "^2.16.5",
    "@graphql-codegen/introspection": "^2.2.3",
    "@graphql-codegen/typescript": "^2.8.7",
    "@graphql-codegen/typescript-document-nodes": "^2.3.13",
    "@graphql-codegen/typescript-resolvers": "^2.7.13",
    "@graphql-codegen/visitor-plugin-common": "^2.11.1",
    "@types/copyfiles": "^2",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "env-cmd": "10.1.0",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^46.0.0",
    "husky": "8.0.1",
    "nodemon": "^2.0.21",
    "prettier": "2.7.1",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "1.8.8",
    "tsconfig-paths": "4.2.0"
  }
}
