{
  "name": "rtf-42-discord-bot",
  "version": "0.0.1",
  "description": "A Discord Bot for 42nd RTF Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/MultiTheFranky/rtf-42-discord-bot"
  },
  "author": "Francisco Álamo García",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "postinstall": "husky install",
    "precommit": "yarn lint && yarn prettier",
    "prepush": "yarn build",
    "dev": "env-cmd tsnd --respawn src/server.ts",
    "start": "env-cmd yarn lint && ts-node src/server.ts",
    "server": "env-cmd node dist/server.js",
    "build": "tsc",
    "clean": "rimraf dist && rimraf log && rimraf db && rimraf node_modules && yarn",
    "lint": "eslint src --ext .ts,.tsx",
    "prettier": "prettier --write \"**/*.{ts,tsx}\"",
    "audit": "yarn-audit-fix"
  },
  "dependencies": {
    "discord.js": "^14.14.1",
    "express": "^4.18.2",
    "prettier": "^2.8.5",
    "simple-json-db": "^2.0.0",
    "typescript": "^5.0.2",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "16.2.1",
    "@types/copyfiles": "^2",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.3",
    "@types/ws": "^8",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "env-cmd": "10.1.0",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^46.0.0",
    "husky": "8.0.1",
    "nodemon": "^2.0.21",
    "prettier": "2.7.1",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "yarn-audit-fix": "9.3.10"
  }
}
