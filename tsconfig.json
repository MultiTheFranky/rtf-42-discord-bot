{
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": false,
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "declaration": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "es2016", "ES2021"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
